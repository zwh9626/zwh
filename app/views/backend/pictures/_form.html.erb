<%= form_for [:backend,@picture], html: {:class => "valid_engine establish", multipart: true} do |f| %>
  <div class="public_form">
    <label class="label"><span>*</span>图片名称:</label>
    <%= f.text_field :name, class: 'validate[required] public_input' %>
  </div>

  <div class="public_form">
    <label class="label">图片上传</label>
    <%= file_field_tag :photo, class: "face" %>
    <% if not @picture.avatars.nil? %>
      <% @picture.avatars.each do |ta|%>
        <a class="pic" href="<%= ta.photo.url %>" ><%= image_tag(ta.photo.url, size: "100x80", title: '点击放大') %></a>
      <% end %>
    <% end %>
  </div>
    <%= render '/backend/shared/form_buttons', :f => f  %>
<% end %>
